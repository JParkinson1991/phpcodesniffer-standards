<?xml version="1.0"?>
<ruleset name="JPSR12" namespace="JParkinson1991\PhpCodeSnifferStandards\Standards\JPSR12">
    <description>Adaptation of the PSR-12 Standard</description>

    <rule ref="PSR12">
        <!--
            PSR-12 Exclusions

            Stops Enforcing Of:
                - Empty new line after <?php
                - Standard operator spacing
                    Internal sniff enforces spaces for all operators except
                    string concatenation where no spaces are enforced
                - multi key word structures to be closed opened on same line
                    Ie } else {
                    This is enforced as being on a new line in internal sniff
        -->
        <exclude name="PSR12.Files.FileHeader.SpacingAfterBlock"/>
        <exclude name="PSR12.Operators.OperatorSpacing"/>
        <exclude name="Squiz.ControlStructures.ControlSignature.SpaceAfterCloseBrace"/>
    </rule>

    <!--
        Array Rules

        Enforces:
            - Lowercase array keyword
            - No spacer after array keyword
            - No commas after last item in single line array
                No commas enforced in multi line array using internal sniff
            - No spaces in empty array
            - Closing brace on new line
            - Keys specification to be uniform, no key non key items in same array
                Special handling of last elements done in internal sniff
            - No key'd arrays can not have some more than 1 element per line on
              multi line array
    -->
    <rule ref="Squiz.Arrays.ArrayDeclaration.NotLowerCase"/>
    <rule ref="Squiz.Arrays.ArrayDeclaration.SpaceAfterKeyword"/>
    <rule ref="Squiz.Arrays.ArrayDeclaration.CommaAfterLast"/>
    <rule ref="Squiz.Arrays.ArrayDeclaration.SpaceInEmptyArray"/>
    <rule ref="Squiz.Arrays.ArrayDeclaration.CloseBraceNewLine"/>
    <rule ref="Squiz.Arrays.ArrayDeclaration.NoKeySpecified"/>
    <rule ref="Squiz.Arrays.ArrayDeclaration.KeySpecified"/>
    <rule ref="Squiz.Arrays.ArrayDeclaration.ValueNoNewline"/>
</ruleset>
